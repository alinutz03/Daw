 @model List<examenv3.Models.Emisiune>
<h1>Emisiuni</h1>

<a asp-action="GetAdaugareEmisiune"> Adauga o emisiune</a>


<table class="table">
    <thead>
        <tr>
            <th>Titlu</th>
            <th>Gen</th>
            <th>Produactor</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emisiune in Model)
        {
            <tr>
                <td>@emisiune.Titlu</td>
                <td>@emisiune.Gen</td>
                <td> Adaugat de @emisiune.Producator la data de @emisiune.AnLansare in categoria @emisiune.Gen</td>
                <td><a asp-action="EditeazaEmisiune" asp-route-id="@emisiune.Id">Editeaza o emisiune</a></td>
                <td><a asp-action="StergeEmisiune" asp-route-id="@emisiune.Id" onclick="return confirm('Esti sigur ca vrei sa stergi stirea ?')">Sterge o stire</a></td>
            </tr>
        }
    </tbody>
</table>